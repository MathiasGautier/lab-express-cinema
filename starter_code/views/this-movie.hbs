<div class="one-movie">

    <img src="{{movie.image}}">

    <div class="description">

        <a href="/movies">Go back</a>

        <h2>{{movie.title}}</h2>

        <h3>Director: {{movie.director}} </h3>

        <h3>Stars</h3>

        <ul id="stars">
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}

        </ul>
        <p>{{movie.description}}</p>
        <ul id="showtime">
            {{#each movie.showtimes}}
            <li>{{this}}</li>
            <li>| </li>
            {{/each}}

        </ul>

    </div>

</div>